    android:weightSum="2">

    <com.quickblox.videochat.webrtc.view.RTCGLVideoView
        android:id="@+id/localView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.quickblox.videochat.webrtc.view.RTCGLVideoView
        android:id="@+id/opponentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>